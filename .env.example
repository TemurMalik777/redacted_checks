# .env.example
# Bu faylni .env ga nusxa oling va qiymatlarni to'ldiring

# =====================================
# SERVER CONFIGURATION
# =====================================
PORT=3001
NODE_ENV=development

# =====================================
# DATABASE CONFIGURATION
# =====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=redacted_checks
DB_USER=postgres
DB_PASSWORD=5432

# Redis konfiguratsiyasi
# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=MySecretPass123
REDIS_DB=0


# =====================================
# JWT & AUTHENTICATION (MAJBURIY!)
# Production: Minimum 32 belgi, murakkab
# Generatsiya: openssl rand -base64 32
# =====================================
JWT_SECRET=super_secret_jwt_key_change_this_in_production_32chars_minimum
ACCESS_TOKEN_SECRET=access_token_secret_key_min_32_chars_change_in_production_xyz123
REFRESH_TOKEN_SECRET=refresh_token_secret_key_min_32_chars_change_in_production_abc456

# Token muddatlari
JWT_EXPIRES_IN=1d
ACCESS_TOKEN_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d

# =====================================
# API KEYS
# =====================================
API_KEY=b5f4362e7f0c752d0ff8d2ce1726e16e
CAPTCHA_SOLVER_API_KEY=b5f4362e7f0c752d0ff8d2ce1726e16e

# =====================================
# LOGGING
# =====================================
LOG_LEVEL=info
LOG_FILE=logs/application.log

# =====================================
# FILE UPLOAD
# =====================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# =====================================
# BROWSER AUTOMATION
# =====================================
HEADLESS=true
BROWSER_TIMEOUT=30000

# =====================================
# RATE LIMITING
# =====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100